<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class='text-center'>Rindahl Community</h1>
    <p class='text-center'>'Users must gill out profile in order to be visible in the Community'</p>
    <ul class="list-unstyled">
      <% @users.each do |user| %>
        <% if user.profile %>
        <li>
          <div class="well row <%= cycle('orange-bg', '') %>">
            <div class="col-sm-4 text-center">
            <% if user.profile.avatar %>
              <%= link_to user do %>
                <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
              <% end %>
            <% end %>
            </div>

            <div>
              <%= link_to user, class: 'link-text' do %>
              <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
              <% end %>
              <p>
                <%= user.profile.job_title %>
                <% if user.plan_id == 2 %>
                  <span class="label label-primary">PRO</span>
                 <% end %>
              </p>
            </div>

          </div>
        </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
